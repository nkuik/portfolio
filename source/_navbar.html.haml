%div{class:"navbar-wagon navbar-wagon-fixed"}
  <!-- Logo -->
  %ul.list-inline.navbar.navbar-margin.navbar-wagon-brand

  <!-- Right Navigation -->
  %div{class:"navbar-wagon-right hidden-xs hidden-sm"}

    = link_to "About", "/index.html", class: "navbar-wagon-item navbar-wagon-link"
    = link_to "My Work", "/index.html", class: "navbar-wagon-item navbar-wagon-link"

    <!-- Button (call-to-action) -->
    = link_to "My CV", "https://google.com", class: "navbar-wagon-item navbar-wagon-button btn"

  <!-- Dropdown appearing on mobile only -->
  %div{class:"navbar-wagon-item hidden-md hidden-lg"}
    %div{class:"dropdown"}
      %i.fa.fa-bars.dropdown-toggle{"data-toggle" => "dropdown"}
      %ul{class:"dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu"}


