.short-banner{style:"background-image: linear-gradient(-225deg, rgba(10,10,10,0.90) 0%, rgba(200,200,200,0.3) 50%), url('images/7030314.jpg')"}
  %h4 Contact Me

.row{id:"id-row"}
  %div{id:"success-message", class:"col s8 offset-s2 hidden"}
    %ul{id:"staggered-list"}
      %li
        %h4.center Thanks! I'll get back to you soon.
  %form{id:"contact-form"}
    .row
      %div{class:"input-field col s6"}
        %input{id:"first_name", type:"text", class:"validate"}
        %label{for:"first_name"}First Name
      %div{class:"input-field col s6"}
        %input{id:"last_name", type:"text", class:"validate"}
        %label{for:"last_name"}Last Name
    .row
      %div{class:"input-field col s12"}
        %input{id:"email", type:"email", class:"validate"}
        %label{for:"email"}Email
    .row
      %div{class:"input-field col s12"}
        %textarea{id:"message", class:"materialize-textarea"}
        %label{for:"message"} Your Message
    .row.center
      %a{id:"send-message", class:"waves-effect waves-light btn-large"} Send





