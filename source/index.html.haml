.wrapper-gray
  .short-banner{class:"vertical-margin", style:"background-image: linear-gradient(-180deg, rgba(20,20,20,0.70) 0%, rgba(20,20,20,0.70) 90%), url('images/contact.jpg')"}
    .container
      %h4.white-text.center Contact Me

.wrapper-gray
  .container
    .row{id:"id-row"}
      .card-panel.col.s8.offset-s2
        %div{id:"success-message", class:"col s8 offset-s2 hidden"}
          %ul{id:"staggered-list"}
            %li
              %h4.center.padded Thanks! I'll get back to you soon.
        %form{id:"contact-form"}
          %h5.center{class:"teal-text darken-1 less-padded"} I look forward to hearing from you!
          .row{id:"contact", class:"section scrollspy"}
            %div{class:"input-field col s8 offset-s2"}
              %input{id:"name", type:"text"}
              %label{class:"active", for:"name"} Name
          .row
            %div{class:"input-field col s8 offset-s2"}
              %input{id:"email", type:"email", class:"validate", name:"_replyto"}
              %label{class:"active", for:"email"} Email
          .row
            %div{class:"input-field col s8 offset-s2"}
              %textarea{id:"message", class:"materialize-textarea"}
              %label{class:"active", for:"message"} Your Message
          .row.center
            %a{id:"send-message", class:"waves-effect waves-light btn teal darken-1"} Send
